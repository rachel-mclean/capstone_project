<div class="card">
  <div class="card-body">
    <h4 class="card-title">{{username}}</h4>
    <h6 class="card-subtitle mb-2 text-muted">user since {{formatTimestamp createdAt}}</h6>

    <div class="card-group">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">{{username}} can teach these skills:</h4>
          <p class="card-text">{{existingSkills}}</p>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">{{username}} wants to learn these skills:</h4>
          <p class="card-text">{{desiredSkills}}</p>
        </div>
      </div>
    </div>
    <p>Contact {{username}} at <a href="#!">{{email}}</a></p>
  </div>
</div>
